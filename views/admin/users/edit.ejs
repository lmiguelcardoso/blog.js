    <hr>
    <div class="card mt-3">
        <div class="card-header">
            <h2>Edição de Usuario</h2>
        </div>
        <div class="card-body">
            <form action="/user/edit" method="post" >
                <input type="hidden" value="<%= user.id%>" name="id">
